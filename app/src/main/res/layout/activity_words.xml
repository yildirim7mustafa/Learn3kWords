<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebcg"
    tools:context=".WordsActivity">

    <Button
        android:id="@+id/goProfile3_button"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="145dp"
        android:background="@drawable/bt_bg"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iDoNotKnowButton"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/getWord"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bt_bg1"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/iDoNotKnowButton"
        android:layout_width="208dp"
        android:layout_height="72dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="102dp"
        android:background="@drawable/bt_bg"
        android:text="Bilmiyorum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iKnowButton"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/iKnowButton"
        android:layout_width="303dp"
        android:layout_height="81dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/bt_bg"
        android:text="Biliyorum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getWord"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>